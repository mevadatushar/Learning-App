<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomePageActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="332dp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:src="@drawable/wlcimg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:fontFamily="@font/nunitoregular"
            android:text="Welcome to Explain Like I'm Five!"
            android:textColor="#C8000000"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/nunitoregular"
            android:text="Here you can find the best mentors explaining everything as simply and friendly as possible. Because sometimes this world is tooooo complicated..."
            android:textColor="#94000000"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

    </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="bottom">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/button"
                android:fontFamily="@font/nunitosmibold"
                android:text="Next"
                android:textColor="@color/white"
                android:textAllCaps="false"

                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>