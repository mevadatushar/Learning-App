<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Background color inside the border -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@android:color/black"/> <!-- Border width -->
           <!-- Border color -->
            <corners android:radius="10dp" /> <!-- Corner radius, adjust as needed -->
        </shape>
    </item>
</layer-list>
